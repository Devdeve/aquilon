#!/usr/bin/env python2.6

import os
import sys

src = os.path.realpath(os.path.join(os.path.dirname(__file__), '..',
                                    'lib', 'python2.6'))
sys.path.append(src)

import aquilon.aqdb.depends
import aquilon.server.depends
import aquilon.client.depends
# Any other packages?

# Any of the above may override the default location for ms.version...
import ms.version
ms.version.addpkg("pylint", "0.20.0")
ms.version.addpkg("logilab.astng", "0.20.0")
ms.version.addpkg("logilab.common", "0.49.0")

from pylint import lint

lint.Run(sys.argv[1:])

